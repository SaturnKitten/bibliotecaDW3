{% extends "templates/base.html" %}

{% block content %}
<div x-data="funcForm()">

  <ol class="breadcrumb mb-2">
    <li class="breadcrumb-item active">{{title}}</li>
  </ol>

  <div class="card">
    <div class="card-header">Cadastro de Funcionário</div>

    <div class="card-body">

      <form>

        <div class="form-group col-md-6">
          <label>Nome</label>
          <input class="form-control" x-model="form.nome">
        </div>

        <div class="form-group col-md-6">
          <label>Usuário</label>
          <input class="form-control" x-model="form.username">
        </div>

        <div class="form-group col-md-6">
          <label>Email</label>
          <input class="form-control" x-model="form.email">
        </div>

        <div class="form-group col-md-6">
          <label>Senha</label>
          <input type="password" class="form-control" x-model="form.password">
        </div>

        <button type="button" @click="insertForm()" class="btn btn-primary mt-4">Salvar</button>
        <a href="/funcionario/manutFuncionario" class="btn btn-info mt-4 ml-2">Retornar</a>

      </form>

      <div class="mt-3">
        <template x-if="message">
          <div :class="messageClass" x-text="message"></div>
        </template>
      </div>

    </div>
  </div>

</div>

<script>
function funcForm() {
  return {
    form: {
      nome: '',
      username: '',
      password: '',
      email: '',
      removido: false
    },

    message: '',
    messageClass: '',

    async insertForm() {
      try {
        const response = await fetch('/funcionario/insertFuncionario', {
          method: 'POST',
          headers: {"Content-Type": "application/json"},
          body: JSON.stringify(this.form)
        });

        const result = await response.json();

        if (result.status === "ok") {
          alert("Funcionário cadastrado!");
          this.resetForm();
        } else {
          this.message = `Erro: ${result.status}`;
          this.messageClass = 'alert alert-danger';
        }

      } catch (error) {
        this.message = `Erro: ${error.message}`;
        this.messageClass = 'alert alert-danger';
      }
    },

    resetForm() {
      this.form = {
        nome: '',
        username: '',
        password: '',
        email: '',
        removido: false
      };
      this.message = false;
    }
  }
}
</script>
{% endblock %}
