{% extends "templates/base.html" %}

{% block content %}
<div x-data="emprestimoForm()">
  <ol class="breadcrumb mb-2">
    <li class="breadcrumb-item active">{{title}}</li>
  </ol>

  <div class="row">
    <div class="col-12">
      <div class="card-header">{{title}}</div>
      <div class="card-body">
        <form>
          <div class="form-group col-md-6">
            <label for="id">ID</label>
            <input type="text" id="id" class="form-control" x-model="form.id" x-bind:disabled="disabled">
          </div>

          <div class="form-group col-md-6">
            <label for="id_livro">Livro</label>
            <select id="id_livro" class="form-select" x-model="form.id_livro" x-bind:disabled="disabled">
              {% for l in livro %}
                <option value="{{l.id}}">{{l.titulo}}</option>
              {% endfor %}
            </select>
          </div>

          <div class="form-group col-md-6">
            <label for="id_leitor">Leitor</label>
            <select id="id_leitor" class="form-select" x-model="form.id_leitor" x-bind:disabled="disabled">
              {% for r in leitor %}
                <option value="{{r.id}}">{{r.nome}}</option>
              {% endfor %}
            </select>
          </div>

          <div class="form-group col-md-6">
            <label for="data_emprestimo">Data de Empréstimo</label>
            <input type="date" id="data_emprestimo" class="form-control" x-model="form.data_emprestimo" x-bind:disabled="disabled">
          </div>

          <div class="form-group col-md-6">
            <label for="data_vencimento">Data de Vencimento</label>
            <input type="date" id="data_vencimento" class="form-control" x-model="form.data_vencimento" x-bind:disabled="disabled">
          </div>

          <div class="form-group col-md-4">
            <label for="status">Status</label>
            <input type="text" id="status" class="form-control" x-model="form.status" x-bind:disabled="disabled">
          </div>

          <div class="form-group col-md-4">
            <label for="multa_atraso">Multa por Atraso</label>
            <input type="number" id="multa_atraso" step="0.01" class="form-control" x-model="form.multa_atraso" x-bind:disabled="disabled">
          </div>

          <button type="button" @click="updateForm()" class="btn btn-primary mt-4">Salvar</button>
          <button type="button" @click="deleteForm()" x-show="!disabled" class="btn btn-danger mt-4">Excluir</button>
          <a href="/emprestimo/manutEmprestimo" class="btn btn-info mt-4 ml-2">Retornar</a>
        </form>

        <div class="mt-3">
          <template x-if="message">
            <div :class="messageClass" x-text="message"></div>
          </template>
        </div>

      </div>
    </div>
  </div>
</div>

<script>
window.onload = function() {
  windowOnLoad();
  const localErro = "{{erro}}";
  if (localErro != "") { alert("[vwFRUDrEmprestimo|onload] Servidor retornou o erro:" + localErro); }
  $("#id_livro").focus();
};

function emprestimoForm() {
  return {
    form: {
      id: "{{data.id}}",
      id_livro: "{{data.id_livro}}",
      id_leitor: "{{data.id_leitor}}",
      data_emprestimo: "{{data.data_emprestimo}}",
      data_vencimento: "{{data.data_vencimento}}",
      status: "{{data.status}}",
      multa_atraso: "{{data.multa_atraso}}",
      removido: false
    },
    message: '',
    messageClass: '',
    disabled: {{disabled}},

    async updateForm() {
      try {
        const response = await fetch('/emprestimo/UpdateEmprestimo', {
          method: 'POST',
          headers: {"Content-Type": "application/json"},
          body: JSON.stringify(this.form)
        });
        const result = await response.json();
        if (result.status == "ok") {
          alert("Empréstimo atualizado com sucesso");
        } else {
          this.message = `Erro! ${result.status}`;
          this.messageClass = 'alert alert-danger';
        }
      } catch (error) {
        this.message = `Erro de conexão: ${error.message}`;
        this.messageClass = 'alert alert-danger';
      }
    },

    async deleteForm() {
      try {
        // marcar removido = true (opção A)
        this.form.removido = true;
        const response = await fetch('/emprestimo/DeleteEmprestimo', {
          method: 'POST',
          headers: {"Content-Type": "application/json"},
          body: JSON.stringify(this.form)
        });
        const result = await response.json();
        if (result.status == "ok") {
          alert("Empréstimo marcado como removido");
          window.location.href = "/emprestimo/manutEmprestimo";
        } else {
          this.message = `Erro! ${result.status}`;
          this.messageClass = 'alert alert-danger';
        }
      } catch (error) {
        this.message = `Erro de conexão: ${error.message}`;
        this.messageClass = 'alert alert-danger';
      }
    }

  };
}
</script>
{% endblock %}
