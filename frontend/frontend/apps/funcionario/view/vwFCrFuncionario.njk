{% extends "templates/base.html" %}

{% block content %}
  <div x-data="funcionarioForm()">
    <ol class="breadcrumb mb-2">
      <li class="breadcrumb-item active">{{title}}</li>
    </ol>
    <div class="row"><div class="col-12">
      <div class="card-header">{{title}}</div>
      <div class="card-body">
        <form>
          <div class="form-group col-md-6">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" id="nome" x-model="form.nome" required>
          </div>
          <div class="form-group col-md-6">
            <label for="username">Username</label>
            <input type="text" class="form-control" id="username" x-model="form.username" required>
          </div>
          <div class="form-group col-md-6">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" x-model="form.password" required>
          </div>
          <div class="form-group col-md-6">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" x-model="form.email" required>
          </div>

          <input type="hidden" x-model="form.removido">

          <button type="button" @click="insertForm()" class="btn btn-primary mt-4">Salvar</button>
          <a href="/funcionario/manutFuncionario" class="btn btn-info mt-4 ml-2">Retornar</a>
        </form>

        <div class="mt-3">
          <template x-if="message"><div :class="messageClass" x-text="message"></div></template>
        </div>
      </div>
    </div></div>

  <script>
    window.onload = function(){ windowOnLoad(); const localErro = "{{erro}}"; if(localErro != "") alert("[vwFuncionario|onload]Servidor retornou o erro:" + localErro); document.getElementById("nome").focus(); };

    function funcionarioForm(){
      return {
        form: { nome:'', username:'', password:'', email:'', removido:false },
        message:'', messageClass:'',
        async insertForm(){
          try{
            const response = await fetch('/funcionario/insertFuncionario', { method:'POST', headers:{ "Content-Type":"application/json" }, body: JSON.stringify(this.form) });
            const result = await response.json();
            if(result.status=="ok"){ alert("Funcionário cadastrado com sucesso"); this.resetForm(); } else { this.message = `Erro: ${result.status}`; this.messageClass='alert alert-danger'; }
          } catch(e){ this.message = `Erro de conexão: ${e.message}`; this.messageClass='alert alert-danger'; }
        },
        resetForm(){ this.form={ nome:'', username:'', password:'', email:'', removido:false }; this.message=false; }
      };
    }
  </script>
{% endblock %}
