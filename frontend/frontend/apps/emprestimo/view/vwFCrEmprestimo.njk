{% extends "templates/base.html" %}

{% block content %}
  <div x-data="emprestimoForm()">
    <ol class="breadcrumb mb-2">
      <li class="breadcrumb-item active">{{title}}</li>
    </ol>
    <div class="row">
      <div class="col-12">

        <div class="card-header">
          {{title}}
        </div>

        <div class="card-body">
          <div class="">
            <form>

              <div class="row">

                <div class="col-md-3">
                  <div class="form-group">
                    <label for="id_livro">Livro</label>
                    <select class="form-select" id="id_livro" x-model="form.id_livro">
                      {% for reg in livros %}
                        <option value="{{reg.id}}">{{reg.titulo}}</option>
                      {% endfor %}
                    </select>
                  </div>
                </div>

                <div class="col-md-3">
                  <div class="form-group">
                    <label for="id_leitor">Leitor</label>
                    <select class="form-select" id="id_leitor" x-model="form.id_leitor">
                      {% for reg in leitores %}
                        <option value="{{reg.id}}">{{reg.nome}}</option>
                      {% endfor %}
                    </select>
                  </div>
                </div>

              </div>

              <div class="form-group col-md-6">
                <label for="data_emprestimo">Data do Empréstimo</label>
                <input type="date" class="form-control" id="data_emprestimo" x-model="form.data_emprestimo">
              </div>

              <div class="form-group col-md-6">
                <label for="data_vencimento">Data de Vencimento</label>
                <input type="date" class="form-control" id="data_vencimento" x-model="form.data_vencimento">
              </div>

              <div class="form-group col-md-6">
                <label for="status">Status</label>
                <select class="form-select" id="status" x-model="form.status">
                  <option value="pendente">Pendente</option>
                  <option value="devolvido">Devolvido</option>
                  <option value="atrasado">Atrasado</option>
                </select>
              </div>

              <div class="form-group col-md-6">
                <label for="multa_atraso">Multa de Atraso</label>
                <input type="number" class="form-control" id="multa_atraso" step="0.01" x-model="form.multa_atraso">
              </div>

              <input type="hidden" x-model="form.removido">

              <button type="button" @click="insertForm()" class="btn btn-primary mt-4">Salvar</button>
              <a href="/emprestimo/manutEmprestimo" class="btn btn-info mt-4 ml-2" role="button" aria-disabled="true">Retornar</a>

            </form>

            <div class="mt-3">
              <template x-if="message">
                <div :class="messageClass" x-text="message"></div>
              </template>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>

  <script>

    window.onload = function () {
      windowOnLoad();

      const localErro = "{{erro}}";
      if (localErro != "") {
        alert("[vwEmprestimo|onload]Servidor retornou o erro:" + localErro);
      }

      document.getElementById("id_livro").focus();
    };

    function emprestimoForm() {
      return {
        form: {
          id_livro: '',
          id_leitor: '',
          data_emprestimo: '',
          data_vencimento: '',
          status: 'pendente',
          multa_atraso: 0.00,
          removido: false
        },

        message: '',
        messageClass: '',

        async insertForm() {
          try {
            const response = await fetch('/emprestimo/insertEmprestimo', {
              method: 'POST',
              headers: {
                "Content-Type": "application/json"
              },
              body: JSON.stringify(this.form)
            });

            const result = await response.json();

            if (result.status == "ok") {
              alert("Empréstimo cadastrado com sucesso");
              this.resetForm();
            } else {
              const errorData = result.status;
              this.message = `Erro! Não foi possível cadastrar o empréstimo: ${errorData}`;
              this.messageClass = 'alert alert-danger';
            }

          } catch (error) {
            this.message = `Erro de conexão: ${error.message}`;
            this.messageClass = 'alert alert-danger';
          }
        },

        resetForm() {
          this.form = {
            id_livro: '',
            id_leitor: '',
            data_emprestimo: '',
            data_vencimento: '',
            status: 'pendente',
            multa_atraso: 0.00,
            removido: false
          };
          this.message = false;
        }
      };
    }

  </script>

{% endblock %}
