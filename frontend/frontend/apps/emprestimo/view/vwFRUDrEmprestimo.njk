{% extends "templates/base.html" %}

{% block content %}
  <div x-data="emprestimoForm()">
    <ol class="breadcrumb mb-2">
      <li class="breadcrumb-item active">{{title}}</li>
    </ol>
    <div class="row">
      <div class="col-12">

        <div class="card-header">
          {{tite}}
        </div>

        <div class="card-body">
          <div class="">

            <form>
              <div class="row">

                <div class="col-md-3">
                  <div class="form-group">
                    <label for="id_emprestimo">ID do Empréstimo</label>
                    <input type="text" class="form-control" id="id_emprestimo" 
                           x-model="form.id_emprestimo" x-bind:disabled="true">
                  </div>
                </div>

                <div class="col-md-3">
                  <div class="form-group">
                    <label for="id_livro">Livro</label>
                    <select class="form-select" id="id_livro" 
                            x-model="form.id_livro" x-bind:disabled="disabled">
                      {% for reg in livros %}
                        <option value="{{reg.id}}">{{reg.titulo}}</option>
                      {% endfor %}
                    </select>
                  </div>
                </div>

                <div class="col-md-3">
                  <div class="form-group">
                    <label for="id_locador">Locador</label>
                    <select class="form-select" id="id_locador" 
                            x-model="form.id_locador" x-bind:disabled="disabled">
                      {% for reg in locadores %}
                        <option value="{{reg.id}}">{{reg.nome}}</option>
                      {% endfor %}
                    </select>
                  </div>
                </div>

              </div>

              <div class="form-group col-md-6">
                <label for="dtlocacao">Data de Locação</label>
                <input type="date" class="form-control" id="dtlocacao" 
                       x-model="form.dtlocacao" x-bind:disabled="disabled">
              </div>

              <div class="form-group col-md-6">
                <label for="dtvencimento">Data de Vencimento</label>
                <input type="date" class="form-control" id="dtvencimento" 
                       x-model="form.dtvencimento" x-bind:disabled="disabled">
              </div>

              <div class="form-group col-md-6">
                <label for="valor">Valor</label>
                <input type="number" class="form-control" id="valor" 
                       x-model="form.valor" x-bind:disabled="disabled">
              </div>

              <div class="form-group col-md-6">
                <label for="descricao">Observações</label>
                <textarea class="form-control" id="descricao" rows="2"
                          x-model="form.descricao" x-bind:disabled="disabled"></textarea>
              </div>

              <button type="button" @click="updateForm()" class="btn btn-primary mt-4">Salvar</button>
              <button type="button" @click="deleteForm()" x-show="!disabled" class="btn btn-danger mt-4">Devolver</button>
              <a href="/aluguel/manutAluguel" class="btn btn-info mt-4 ml-2">Retornar</a>
            </form>

            <div class="mt-3">
              <template x-if="message">
                <div :class="messageClass" x-text="message"></div>
              </template>
            </div>

          </div>

        </div>
      </div>
    </div>
  </div>

  <script>

    window.onload = function () {
      windowOnLoad();

      const localErro = "{{erro}}";
      if (localErro != "") {
        alert("[vwAluguel|onload]Servidor retornou o erro:" + localErro);
      }
      $("#id_livro").focus();
    };

    function emprestimoForm() {
      return {
        form: {
          id_emprestimo: "{{data.id_emprestimo}}",
          id_livro: "{{data.id_livro}}",
          id_locador: "{{data.id_locador}}",
          dtlocacao: "{{data.dtlocacao}}",
          dtvencimento: "{{data.dtvencimento}}",
          valor: "{{data.valor}}",
          descricao: "{{data.descricao}}",
          removido: false
        },
        message: '',
        messageClass: '',
        disabled: {{disabled}},

        async updateForm() {
          try {
            const response = await fetch('/aluguel/updateAluguel', {
              method: 'POST',
              headers: {
                "Content-Type": "application/json"
              },
              body: JSON.stringify(this.form)
            });

            const result = await response.json();
            if (result.status == "ok") {
              alert("Empréstimo atualizado com sucesso");
            } else {
              const errorData = result.status;
              this.message = `Erro ao atualizar: ${errorData}`;
              this.messageClass = 'alert alert-danger';
            }
          } catch (error) {
            this.message = `Erro de conexão: ${error.message}`;
            this.messageClass = 'alert alert-danger';
          }
        },

        async deleteForm() {
          try {
            const response = await fetch('/aluguel/deleteAluguel', {
              method: 'POST',
              headers: {
                "Content-Type": "application/json"
              },
              body: JSON.stringify(this.form)
            });

            const result = await response.json();
            if (result.status == "ok") {
              alert("Empréstimo devolvido com sucesso");
              window.location.href = "/aluguel/manutAluguel";
            } else {
              const errorData = result.status;
              this.message = `Erro ao devolver: ${errorData}`;
              this.messageClass = 'alert alert-danger';
            }
          